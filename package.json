{
  "name": "node-dockerfile",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "author": "professor-severus-snape",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "docker:build:prod": "docker build -f docker/Dockerfile.prod -t professorseverussnape/hw-dockerfile:latest .",
    "docker:run:prod": "docker run --rm --name container-hw-dockerfile-prod -e PORT=3000 -p 3000:3000 professorseverussnape/hw-dockerfile:latest",
    "docker:push:prod": "docker push professorseverussnape/hw-dockerfile:latest",
    "docker:build:dev": "docker build -f docker/Dockerfile.dev -t image-hw-dockerfile .",
    "docker:run:dev": "docker run -it --rm --name container-hw-dockerfile -e PORT=3000 -p 3000:3000 -v $(pwd):/app -v /app/node_modules image-hw-dockerfile"
  },
  "dependencies": {
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-ejs-layouts": "^2.5.1",
    "multer": "^2.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "nodemon": "^3.1.11"
  }
}
